version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    image: {{ project_slug }}:latest
    container_name: {{ project_slug }}
    restart: unless-stopped
    environment:
      - PYTHONUNBUFFERED=1
      - ENVIRONMENT=production
    volumes:
      # Mount source code for development
      - ./src:/app/src
      # Mount data directory (if needed)
      - ./data:/app/data
    ports:
      # Expose ports if your app is a web service
      # - "8000:8000"
    networks:
      - {{ project_slug }}-network
