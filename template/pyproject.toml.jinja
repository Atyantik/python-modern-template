[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ project_description }}"
readme = "README.md"
requires-python = ">={{ min_python_version }}"
authors = [
    {name = "{{ author_name }}", email = "{{ author_email }}"},
]
license = {text = "{{ license }}"}
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
{%- if license == "MIT" %}
    "License :: OSI Approved :: MIT License",
{%- elif license == "Apache-2.0" %}
    "License :: OSI Approved :: Apache Software License",
{%- elif license == "GPL-3.0" %}
    "License :: OSI Approved :: GNU General Public License v3 (GPLv3)",
{%- elif license == "BSD-3-Clause" %}
    "License :: OSI Approved :: BSD License",
{%- endif %}
    "Programming Language :: Python :: 3",
{%- if min_python_version == "3.11" or python_version in ["3.11", "3.12", "3.13"] %}
    "Programming Language :: Python :: 3.11",
{%- endif %}
{%- if python_version in ["3.12", "3.13"] %}
    "Programming Language :: Python :: 3.12",
{%- endif %}
{%- if python_version == "3.13" %}
    "Programming Language :: Python :: 3.13",
{%- endif %}
    "Topic :: Software Development :: Libraries :: Python Modules",
]
keywords = []
dependencies = []

[project.scripts]
{{ package_name }} = "{{ package_name }}.main:main"

{%- if include_ai_tools %}
# AI Tools - Session management and context tracking
ai-start-task = "scripts.ai_tools.start_task:main"
ai-log = "scripts.ai_tools.log_execution:main"
ai-update-plan = "scripts.ai_tools.update_plan:main"
ai-finish-task = "scripts.ai_tools.finish_task:main"
ai-context-summary = "scripts.ai_tools.context_summary:main"
ai-check-conflicts = "scripts.ai_tools.check_conflicts:main"
ai-add-decision = "scripts.ai_tools.add_decision:main"
ai-add-convention = "scripts.ai_tools.add_convention:main"
{%- endif %}

{%- if include_quality_scripts %}
# Quality Tools - Single source of truth for quality checks
quality-format = "scripts.quality.format:main"
quality-lint = "scripts.quality.lint:main"
quality-test = "scripts.quality.test:main"
quality-security = "scripts.quality.security:main"
quality-check = "scripts.quality.check:main"
{%- endif %}

[dependency-groups]
dev = [
    "black>=25.9.0",
    "isort>=7.0.0",
    "mypy>=1.18.2",
{%- if include_pre_commit %}
    "pre-commit>=4.3.0",
{%- endif %}
    "pylint>=4.0.2",
    "pytest>=8.4.2",
    "pytest-cov>=7.0.0",
    "pytest-mock>=3.15.1",
    "ruff>=0.14.3",
{%- if include_cli %}
{%-   if cli_framework == "typer" %}
    "typer[all]>=0.12.0",
{%-   elif cli_framework == "click" %}
    "click>=8.1.7",
{%-   endif %}
{%- endif %}
{%- if include_docs %}
    "mkdocs>=1.6.0",
    "mkdocs-material>=9.5.0",
    "mkdocstrings[python]>=0.26.0",
{%- endif %}
]

[tool.black]
line-length = {{ line_length }}
target-version = ['py{{ python_version|replace(".", "") }}']
include = '\.pyi?$'
extend-exclude = '''
^/(
  (
      \.eggs
    | \.git
    | \.hg
    | \.mypy_cache
    | \.tox
    | \.venv
    | _build
    | buck-out
    | build
    | dist
  )/
)
'''

[tool.isort]
profile = "black"
line_length = {{ line_length }}
multi_line_output = 3
include_trailing_comma = true
force_grid_wrap = 0
use_parentheses = true
ensure_newline_before_comments = true
split_on_trailing_comma = true
skip_gitignore = true

[tool.ruff]
target-version = "py{{ python_version|replace('.', '') }}"
line-length = {{ line_length }}
fix = true

[tool.ruff.lint]
select = [
    "E",    # pycodestyle errors
    "W",    # pycodestyle warnings
    "F",    # pyflakes
    "I",    # isort
    "B",    # flake8-bugbear
    "C4",   # flake8-comprehensions
    "UP",   # pyupgrade
    "ARG",  # flake8-unused-arguments
    "SIM",  # flake8-simplify"
]
ignore = [
    "E501",  # line too long (handled by black)
    "B008",  # do not perform function calls in argument defaults
    "W191",  # indentation contains tabs
]
{%- if include_ai_tools %}
per-file-ignores = {"scripts/ai_tools/*.py" = ["SIM105"]}
{%- endif %}
fixable = ["ALL"]
unfixable = []
exclude = [
    ".git",
    ".venv",
    "__pycache__",
    ".mypy_cache",
    ".pytest_cache",
    "build",
    "dist",
]

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"

[tool.mypy]
python_version = "{{ python_version }}"
strict = true
warn_return_any = true
warn_unused_configs = true
no_implicit_reexport = true
namespace_packages = true
show_error_codes = true
show_column_numbers = true
pretty = true

# Allow certain patterns
ignore_missing_imports = true
follow_imports = "silent"
warn_redundant_casts = true
warn_unused_ignores = true
warn_unreachable = true

# Disallow dynamic typing
disallow_any_generics = true
disallow_subclassing_any = true
disallow_untyped_calls = true
disallow_untyped_defs = true
disallow_incomplete_defs = true
check_untyped_defs = true
disallow_untyped_decorators = false

{%- if include_ai_tools %}
# Exclude pre-existing AI tools with type issues
exclude = [
    "scripts/ai_tools/check_conflicts.py",
    "scripts/ai_tools/finish_task.py",
]
{%- endif %}

[[tool.mypy.overrides]]
module = "tests.*"
disallow_untyped_decorators = false
disallow_untyped_defs = false

{%- if include_ai_tools %}
[[tool.mypy.overrides]]
module = "scripts.ai_tools.*"
# Disable strict checking for pre-existing AI tools
disallow_untyped_defs = false
check_untyped_defs = false
{%- endif %}

[tool.pylint.main]
py-version = "{{ python_version }}"
ignore-patterns = ["test_.*?py", "conftest.py"]
{%- if include_ai_tools %}
ignore-paths = ["^scripts/ai_tools/.*$"]
{%- endif %}
jobs = 0
limit-inference-results = 100
persistent = true

[tool.pylint.messages_control]
disable = [
    "C0114",  # missing-module-docstring
    "C0115",  # missing-class-docstring
    "C0116",  # missing-function-docstring
    "R0903",  # too-few-public-methods
    "R0913",  # too-many-arguments
    "W0613",  # unused-argument
    "W0212",  # protected-access
]

[tool.pylint.format]
max-line-length = {{ line_length }}

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]
addopts = [
    "--verbose",
    "--cov=src",
    "--cov-report=term-missing",
    "--cov-report=html",
    "--cov-report=xml",
    "--cov-fail-under={{ min_coverage }}",
    "--strict-markers",
    "--tb=short",
{%- if include_ai_tools %}
    "--ignore=tests/ai_tools/test_context_summary.py",
{%- endif %}
]
markers = [
    "slow: marks tests as slow (deselect with '-m \"not slow\"')",
    "integration: marks tests as integration tests",
    "unit: marks tests as unit tests",
]

[tool.coverage.run]
source = ["src"{%- if include_quality_scripts %}, "scripts"{% endif %}]
omit = [
    "*/tests/*",
    "*/test_*.py",
    "*/__init__.py",
    "*/conftest.py",
]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "def __str__",
    "raise AssertionError",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
    "if TYPE_CHECKING:",
    "if typing.TYPE_CHECKING:",
]

[tool.coverage.html]
directory = "htmlcov"

{%- if include_quality_scripts %}
# Quality Tool Configuration - Single Source of Truth
[tool.quality]
# Paths to check with formatters and linters
code_paths = ["src", "tests"{%- if include_quality_scripts %}, "scripts"{% endif %}]
# Paths to run tests on
test_paths = ["tests"]
# Minimum coverage percentage
min_coverage = {{ min_coverage }}
{%- endif %}

[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools]
py-modules = []

[tool.setuptools.packages.find]
where = ["src", "."]
include = ["{{ package_name }}*"{%- if include_quality_scripts or include_ai_tools %}, "scripts*"{% endif %}]
namespaces = false

[tool.setuptools.package-data]
"*" = ["py.typed"]
